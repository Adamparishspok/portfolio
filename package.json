{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website for Adam Parish, Lead Product Designer based in Spokane, WA.",
  "main": "index.js",
  "scripts": {
    "start": "pnpm run clean && pnpm run dev",
    "build": "pnpm run clean && pnpm run build:html && pnpm run build:css",
    "format": "prettier --write \"**/*.{js,html,njk,json,md,css,webc}\"",
    "lint": "eslint \"**/*.{js,html,njk,webc}\"",
    "lint:a11y": "start-server-and-test start http://localhost:8080 \"pa11y-ci\"",
    "clean": "rm -rf dist",
    "dev": "concurrently \"pnpm run watch:html\" \"pnpm run watch:css\"",
    "watch:html": "eleventy --serve --incremental",
    "build:html": "eleventy",
    "dev:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css --watch",
    "watch:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css --watch",
    "build:css": "tailwindcss -i src/assets/css/main.css -o dist/assets/css/main.css --minify"
  },
  "keywords": [
    "adam parish",
    "portfolio",
    "product designer",
    "spokane",
    "wa"
  ],
  "author": "Adam Parish",
  "license": "ISC",
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "gsap": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.15.0",
    "html-minifier-terser": "^7.2.0",
    "pa11y-ci": "^3.1.0",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.17"
  }
}
