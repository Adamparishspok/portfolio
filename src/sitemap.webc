---
eleventyExcludeFromCollections: true
dynamicPermalink: false
permalink: sitemap.xml
---

<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <script webc:type="js" webc:is="template">
    collections.all
      .filter((page) => !page.data.noindex && page.url)
      .map((page) => {
        const url = `${this.base.domain}${page.url}`;
        const date = page.date ? new Date(page.date).toISOString() : new Date().toISOString();
        const changefreq = page.data.changefreq
          ? `<changefreq>${page.data.changefreq}</changefreq>`
          : '';
        const priority = page.data.priority ? `<priority>${page.data.priority}</priority>` : '';
        return `
        <url>
            <loc>${url}</loc>
            <lastmod>${date}</lastmod>
            ${changefreq}
            ${priority}
        </url>`;
      })
      .join('');
  </script>
</urlset>
