    <script webc:if="base.env === 'production'">
        function initCookieBanner() {
            // Function to handle the cookie confirmation
            function handleCookieConfirmation() {
                const okButton = document.getElementById('hs-eu-confirmation-button');
                const cookieConfirmation = document.getElementById('hs-eu-cookie-confirmation');
                
                if (okButton && cookieConfirmation) {
                    okButton.addEventListener('click', function(e) {
                        e.preventDefault();
                        cookieConfirmation.classList.add('hide');
                    });
                }
            }
            // Check every 100ms for the elements to be added
            const checkInterval = setInterval(() => {
                const okButton = document.getElementById('hs-eu-confirmation-button');
                const cookieConfirmation = document.getElementById('hs-eu-cookie-confirmation');
                
                if (okButton && cookieConfirmation) {
                    handleCookieConfirmation();
                    clearInterval(checkInterval); // Stop checking once we've found the elements
                }
            }, 100);
            // Stop checking after 10 seconds to prevent infinite checking
            setTimeout(() => {
                clearInterval(checkInterval);
            }, 10000);
        }
        // Initialize the cookie banner handling
        initCookieBanner();
    </script>
